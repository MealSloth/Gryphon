<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/solid_black">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewMeal1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/meal1"/>

                <ImageView
                    android:id="@+id/imageViewMeal2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/meal2"/>

                <ImageView
                    android:id="@+id/imageViewMeal3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/meal3"/>

                <ImageView
                    android:id="@+id/imageViewMeal4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/meal1"/>

                <ImageView
                    android:id="@+id/imageViewMeal5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/meal2"/>

                <ImageView
                    android:id="@+id/imageViewMeal6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/meal3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/solid_black"/>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/transparency">

        <ImageButton
            android:id="@+id/navButtonBecomeAChef"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.97"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:background="@color/transparent_darkgrey"
            android:src="@drawable/nav_button_become_a_chef"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:layout_marginTop="10dp"
            android:background="@color/solid_black"/>

        <ImageButton
            android:id="@+id/navButtonFavorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.97"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:background="@color/transparent_darkgrey"
            android:src="@drawable/nav_button_favorites"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:layout_marginTop="10dp"
            android:background="@color/solid_black"/>

        <ImageButton
            android:id="@+id/navButtonHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.97"
            android:scaleType="centerInside"
            android:background="@color/transparent_darkgrey"
            android:src="@drawable/nav_button_home"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:layout_marginTop="10dp"
            android:background="@color/solid_black"/>

        <ImageButton
            android:id="@+id/navButtonProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.97"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:background="@color/transparent_darkgrey"
            android:src="@drawable/nav_button_profile"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:layout_marginTop="10dp"
            android:background="@color/solid_black"/>

        <ImageButton
            android:id="@+id/navButtonSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.97"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:background="@color/transparent_darkgrey"
            android:src="@drawable/nav_button_settings"/>

    </LinearLayout>

</FrameLayout>
