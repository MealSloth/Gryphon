<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/white"
    android:padding="4dp"
    tools:context=".activities.AbstractNavBarActivity">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:onClick="toggleNavigationDrawer"
        android:src="@mipmap/ic_menu_black_24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/red_mealsloth"
            android:textSize="22sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/activity_post_detail_iv_shopping_cart"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:onClick="startShoppingCartActivity"
        android:src="@mipmap/ic_local_grocery_store_black_24dp" />

</RelativeLayout>