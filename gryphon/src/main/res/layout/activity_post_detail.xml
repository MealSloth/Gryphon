<?xml version="1.0" encoding="utf-8"?>
<com.mealsloth.gryphon.helpers.ui.NavigationDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_navigation_drawer_dl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_navigation_drawer_fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_nav_bar_rl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context="com.mealsloth.gryphon.activities.AbstractNavBarActivity">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.mealsloth.gryphon.activities.PostDetailActivity">

                <ScrollView
                    android:id="@+id/activity_post_detail_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="50dp">

                    <RelativeLayout
                        android:id="@+id/activity_post_detail_rl_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/activity_post_detail_rl_subcontainer_1"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true">

                            <ImageView
                                android:id="@+id/activity_post_detail_iv_post"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginBottom="20dp"
                                android:padding="5dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:background="@color/white_t80"
                                android:text="$ 8.00"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/activity_post_detail_rl_subcontainer_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:layout_marginTop="-50dp"
                            android:layout_below="@id/activity_post_detail_rl_subcontainer_1">

                            <RelativeLayout
                                android:id="@+id/activity_post_detail_rl_basic_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/activity_post_detail_tv_post_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="40dp"
                                    android:textSize="26sp"
                                    android:textColor="@color/black"
                                    android:layout_alignParentStart="true"/>

                                <com.mealsloth.gryphon.helpers.ui.RoundedImageView
                                    android:id="@+id/activity_post_detail_iv_chef"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_alignParentEnd="true"
                                    android:src="@drawable/woman_sample"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/activity_post_detail_rl_basic_info_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/activity_post_detail_rl_basic_info">

                                <LinearLayout
                                    android:id="@+id/activity_post_detail_ll_stars"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="3dp"
                                    android:layout_alignParentStart="true">

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@mipmap/ic_star_black_24dp"/>

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@mipmap/ic_star_black_24dp"/>

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@mipmap/ic_star_black_24dp"/>

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@mipmap/ic_star_half_black_24dp"/>

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@mipmap/ic_star_border_black_24dp"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/activity_post_detail_tv_review_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:layout_marginStart="8dp"
                                    android:layout_toEndOf="@id/activity_post_detail_ll_stars"
                                    android:text="1 review"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:text="1.3 miles"/>

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/grey_light"
                                android:layout_below="@id/activity_post_detail_rl_basic_info_2"/>

                            <LinearLayout
                                android:id="@+id/activity_post_detail_ll_times"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="vertical"
                                android:layout_below="@id/activity_post_detail_rl_basic_info_2">

                                <ImageView
                                    android:layout_gravity="start"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:src="@mipmap/ic_query_builder_black_24dp"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"
                                        android:text="@string/time_available"/>

                                    <TextView
                                        android:id="@+id/activity_post_detail_tv_time_available"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"
                                        android:text="@string/time_available_next"/>

                                    <TextView
                                        android:id="@+id/activity_post_detail_tv_time_available_next"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/activity_post_detail_ll_times"
                                android:background="@color/grey_light"/>

                            <LinearLayout
                                android:id="@+id/activity_post_detail_ll_genre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp"
                                android:layout_below="@id/activity_post_detail_ll_times">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="8dp"
                                    android:rotation="315"
                                    android:src="@mipmap/ic_label_outline_black_24dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:text="American"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/activity_post_detail_tv_post_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:textSize="16sp"
                                android:textColor="@color/grey_extra_dark"
                                android:layout_below="@id/activity_post_detail_ll_genre"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/activity_post_detail_tv_post_description"
                                android:background="@color/grey_light"/>

                            <LinearLayout
                                android:id="@+id/activity_post_detail_ll_pickup_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/activity_post_detail_tv_post_description">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@mipmap/ic_near_me_black_24dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:text="@string/pickup_location"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/activity_post_detail_tv_pickup_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/activity_post_detail_ll_pickup_location"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="1101 Crab Orchard Dr 2A, Raleigh, NC 27606"/>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/activity_post_detail_iv_map"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_below="@id/activity_post_detail_rl_subcontainer_2"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/map_sample" />

                        <RelativeLayout
                            android:id="@+id/activity_post_detail_rl_subcontainer_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/activity_post_detail_iv_map"
                            android:padding="15dp">

                            <View
                                android:id="@+id/activity_post_detail_v_separator"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentTop="true"
                                android:background="@color/grey_light"/>

                            <TextView
                                android:id="@+id/activity_post_detail_tv_reviews_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/activity_post_detail_v_separator"
                                android:layout_marginTop="10dp"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:text="@string/reviews_title"/>

                            <LinearLayout
                                android:id="@+id/activity_post_detail_ll_reviews"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:layout_below="@id/activity_post_detail_tv_reviews_title">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <com.mealsloth.gryphon.helpers.ui.RoundedImageView
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginStart="2dp"
                                            android:src="@drawable/woman_sample"/>

                                        <TextView
                                            android:id="@+id/activity_post_detail_tv_review_sample_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginStart="10dp"
                                            android:layout_gravity="center_vertical"
                                            android:textSize="18sp"
                                            android:textColor="@color/black"
                                            android:text="Jaimie - 2/3/2016"/>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:layout_marginStart="5dp">

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:src="@mipmap/ic_star_black_24dp"/>

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:src="@mipmap/ic_star_black_24dp"/>

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:src="@mipmap/ic_star_black_24dp"/>

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:src="@mipmap/ic_star_half_black_24dp"/>

                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:src="@mipmap/ic_star_border_black_24dp"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/activity_post_detail_tv_review_sample_description"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"
                                        android:text="This is a sample review so don't try to read this and figure out why it says what it says. It's just here to fill up space and make sure that the meal description page is scrollable for testing purposes. So don't read this. For sure. It's pretty useless other than that it describes what it does. But you don't even need to know what it does. That's how it's useless. Pretty cool. Yup."/>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </ScrollView>

                <Button
                    android:id="@+id/activity_post_detail_btn_order"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/salmon"
                    android:textSize="24sp"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_extra_dark"
                    android:text="@string/order_verb"/>

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

    <ListView
        android:id="@+id/fragment_navigation_drawer_lv_menu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/white"/>

</com.mealsloth.gryphon.helpers.ui.NavigationDrawerLayout>