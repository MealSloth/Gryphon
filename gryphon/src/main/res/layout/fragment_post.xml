<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fragment_post"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/post_image_test"
    tools:context="com.mealsloth.gryphon.fragments.PostFragment">

    <TextView
        android:id="@+id/tv_fragment_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>
    
    <TextView
        android:id="@+id/tv_fragment_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"/>

</RelativeLayout>